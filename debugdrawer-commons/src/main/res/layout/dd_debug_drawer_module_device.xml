<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:padding="12dp"
    tools:background="@color/gray"
    tools:ignore="UselessParent"
    >

    <TextView
        style="@style/Widget.DebugDrawer.Base.Header"
        android:layout_width="0dp"
        android:layout_columnSpan="2"
        android:layout_gravity="start|fill_horizontal"
        android:text="Device Information"
        />

    <TextView
        style="@style/Widget.DebugDrawer.Base.RowTitle"
        android:layout_gravity="start|center_vertical"
        android:text="Make"
        />

    <TextView
        android:id="@+id/dd_debug_device_make"
        style="@style/Widget.DebugDrawer.Base.RowValue"
        android:layout_width="0dp"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        tools:text="samsung"
        />

    <TextView
        style="@style/Widget.DebugDrawer.Base.RowTitle"
        android:layout_gravity="start|center_vertical"
        android:text="Model"
        />

    <TextView
        android:id="@+id/dd_debug_device_model"
        style="@style/Widget.DebugDrawer.Base.RowValue"
        android:layout_width="0dp"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        tools:text="SM-N900"
        />

    <TextView
        style="@style/Widget.DebugDrawer.Base.RowTitle"
        android:layout_gravity="start|center_vertical"
        android:text="Resolution"
        tools:text="1920x1080"
        />

    <TextView
        android:id="@+id/dd_debug_device_resolution"
        style="@style/Widget.DebugDrawer.Base.RowValue"
        android:layout_width="0dp"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        tools:text="1920x1080"
        />

    <TextView
        style="@style/Widget.DebugDrawer.Base.RowTitle"
        android:layout_gravity="start|center_vertical"
        android:text="Density"
        />

    <TextView
        android:id="@+id/dd_debug_device_density"
        style="@style/Widget.DebugDrawer.Base.RowValue"
        android:layout_width="0dp"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        tools:text="480dpi"
        />

    <TextView
        style="@style/Widget.DebugDrawer.Base.RowTitle"
        android:layout_gravity="start|center_vertical"
        android:text="Release"
        />

    <TextView
        android:id="@+id/dd_debug_device_release"
        style="@style/Widget.DebugDrawer.Base.RowValue"
        android:layout_width="0dp"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        tools:text="5.0"
        />

    <TextView
        style="@style/Widget.DebugDrawer.Base.RowTitle"
        android:layout_gravity="start|center_vertical"
        android:text="API"
        />

    <TextView
        android:id="@+id/dd_debug_device_api"
        style="@style/Widget.DebugDrawer.Base.RowValue"
        android:layout_width="0dp"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        tools:text="21"
        />

</GridLayout>
